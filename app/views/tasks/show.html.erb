<h1>Task: <%= @task.title %></h1>
<p><h3>Note: <%= @task.details %></h3></p>
<h3>Completed?: <%= @task.completed %></h3>
<%= link_to "Edit", edit_task_path(@task) %>
<%= link_to "Back to Tasks", tasks_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
